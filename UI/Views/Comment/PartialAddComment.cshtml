<h1>Bir Yorum Yapın</h1>
<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form asp-controller="Comment" asp-action="PartialAddComment" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="İsminizi Giriniz" required="">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Title" required="">
            <textarea class="form-control" name="CommentContent" placeholder="Message..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>