@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hakkımızda</h3>
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">

                    <div class="blog_info_left_grid">
                        <a href="single.html">
                            <img src="~/CoreBlogTheme/images/b5.jpg" class="img-fluid" alt="">
                        </a>
                    </div>
                    <h3>
                        Biz Kimiz ? & Misyonumuz & Vizyonumuz
                    </h3>
                    @foreach (var item in Model)
                    {
                        <p>@item.AboutDetails1</p>
                    }
                </div>
            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">

                    <div class="tech-btm">
                        <img src="~/CoreBlogTheme/images/banner1.jpg" class="img-fluid" alt="">
                        <h4>Haber Bültenimize Kaydolun</h4>
                    </div>
                    
                    <partial name="~/Views/NewsLetter/SubscribeMail.cshtml"></partial>

                    <partial name="~/Views/About/SocialMediaAbout.cshtml"></partial>

                    <div class="tech-btm">
                        <h4>Son Postlar</h4>
                        @await Component.InvokeAsync("AuthorLatestBlog")
                    </div>
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>
