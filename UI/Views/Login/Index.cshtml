@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Index";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Giriş Sayfası</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Index" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E-Mail Adresiniz</label>
                        <input type="email" class="form-control" name="AuthorMail" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="AuthorPassword"
                            placeholder="" required="">
                    </div>
                    
                        @if (ViewBag.message != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.message
                            </div>
                        }
                    
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a asp-controller="Register" asp-action="Index"> Henüz Hesabın Yok mu ?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>